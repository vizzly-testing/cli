{
  "name": "@vizzly-testing/storybook",
  "version": "0.1.2",
  "description": "Storybook plugin for Vizzly - seamlessly integrate Storybook stories into your visual development workflow",
  "keywords": [
    "vizzly",
    "storybook",
    "visual-testing",
    "screenshot-testing",
    "visual-regression",
    "plugin"
  ],
  "homepage": "https://vizzly.dev",
  "bugs": "https://github.com/vizzly-testing/cli/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/vizzly-testing/cli.git",
    "directory": "clients/storybook"
  },
  "license": "MIT",
  "author": "Stubborn Mule Software <support@vizzly.dev>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "vizzly": {
    "plugin": "./dist/plugin.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf dist",
    "compile": "babel src --out-dir dist --ignore '**/*.spec.js'",
    "prepublishOnly": "npm test && npm run build",
    "test": "npm run test:unit",
    "test:unit": "node --test $(find tests -name '*.test.js' -not -path 'tests/e2e/*')",
    "test:e2e": "node --test --test-concurrency=1 $(find tests/e2e -name '*.test.js')",
    "test:watch": "node --test --watch $(find tests -name '*.test.js' -not -path 'tests/e2e/*')",
    "lint": "biome lint src tests",
    "lint:fix": "biome lint --write src tests",
    "format": "biome format --write src tests",
    "format:check": "biome format src tests",
    "check": "biome check src tests",
    "check:fix": "biome check --write src tests"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "@vizzly-testing/cli": ">=0.9.0"
  },
  "dependencies": {
    "puppeteer": "^24.5.0",
    "serve-handler": "^6.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@biomejs/biome": "^2.3.8",
    "rimraf": "^6.0.1"
  }
}
